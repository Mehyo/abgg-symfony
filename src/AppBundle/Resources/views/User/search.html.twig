{% extends '::base.html.twig' %}

{% block body -%}
<h1>Liste des joueurs</h1>

<table class="records_list">
  <thead>
    <tr>
      <th>Pseudo</th>
    {% if is_granted("ROLE_ADMIN") %}
      <th>Nom</th>
      <th>Pr√©nom</th>
    {% endif %}
      <th>Equipe</th>
      <th>Contacter</th>
    </tr>
  </thead>
  <tbody>
    {% for entity in entities %}
    <tr>
      <td>{{ entity.username }}</td>
    {% if is_granted("ROLE_ADMIN") %}
      <td>{{ entity.lastName }}</td>
      <td>{{ entity.firstName }}</td>
    {% endif %}
      <td>{{ entity.team }}</td>
      <td><a href='mailto:{{ entity.email }}'>E-Mail</a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
